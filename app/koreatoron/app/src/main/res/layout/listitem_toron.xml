<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#006CC0FF"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/itemlist_bg"
        >
        <LinearLayout
            android:id="@+id/item_tf_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#368AFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찬성"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/item_true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:text="0000000"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF5A5A">

                <TextView
                    android:id="@+id/item_false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:layout_toLeftOf="@id/item_false_text"
                    android:textColor="#FFFFFF"
                    android:text="0000000"/>
                <TextView
                    android:id="@+id/item_false_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반대"
                    android:textColor="#FFFFFF"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tf_layout"
            android:text="TITLE"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:text="DATE"
            android:layout_marginBottom="5dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_date"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:background="@drawable/itemlist_content_bg"
            android:textColor="#353535"
            android:padding="5dp"
            android:text="굿모닝"/>

        <RelativeLayout
            android:id="@+id/item_ll"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/item_content"
            android:background="#5D5D5D"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"/>

        <TextView
            android:id="@+id/item_comment_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ll"
            android:layout_margin="5dp"
            android:textAlignment="textEnd"
            android:text="의견:100"/>

    </RelativeLayout>
</RelativeLayout>