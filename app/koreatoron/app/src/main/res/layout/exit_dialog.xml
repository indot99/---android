<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/exit_dialog_title"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="2dp"
    >

    <RelativeLayout
        android:id="@+id/banner_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/exit_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="280x250"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        </com.google.android.gms.ads.NativeExpressAdView>
    </RelativeLayout>

    <TextView
        android:id="@+id/exit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료하시겠습니까?"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exit_false_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exit_button_bg"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:text="취소"/>
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#00000000"/>
        <Button
            android:id="@+id/exit_true_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exit_button_bg"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:text="종료"/>

    </LinearLayout>

</LinearLayout>